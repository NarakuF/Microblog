<div class="row">
  <div class="col-md-10 mx-auto">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title"><%= @user.email %></h2>
        <h3 class="card-title">Personal Page</h3>
      </div>
      <div class="card-header">
        <%= cond do %>
          <% @user==@current_user -> %>
            <span><%= link "Edit", to: user_path(@conn, :edit, @user) %></span>
          <% @current_user -> %>
            <span><%= link "Follow", to: follow_path(@conn, :new, [@current_user.id, @user.id]) %></span>
          <% true -> %>
        <% end %>
        <span><%= link "Back", to: message_path(@conn, :index), class: "ml-5" %></span>
      </div>
      <div class="card-body border">
        <%= render MicroblogWeb.MessageView, "index.html", assigns %>
      </div>
    </div>
  </div>
</div>
